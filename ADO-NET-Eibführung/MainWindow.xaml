<Window x:Class="ADO_NET_Eibführung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO_NET_Eibführung"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBox IsEnabled="False" Grid.Column="1" AcceptsReturn="True" Name="output" FontFamily="Consolas"
                 ></TextBox>
        <Button Name="btAbfrage" Content="Abfrage" Grid.Row="1" Grid.RowSpan="2" Click="btAbfrage_Click"/>
       
        
    </Grid>
</Window>
